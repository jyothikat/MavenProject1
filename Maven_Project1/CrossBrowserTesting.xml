<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserTestingSuite">

	<test thread-count="5" name="ChromeTestResults">
		<parameter name="browsername" value="Chrome"></parameter>
	<classes>
		<class name="com.testscenarios.Expedia" />
		<class name="com.testscenarios.DataProviderSample" />
	</classes>
	</test>
	
	<test thread-count="5" name="FirefoxTestResults">

	</classes>
	</test>
	
	<test thread-count="5" name="EdgeTestResults">
		<parameter name="browsername" value="Edge"></parameter>
	<classes>
		<class name="com.testscenarios.Expedia" />
		<class name="com.testscenarios.DataProviderSample" />
	</classes>
	</test>
	
	
